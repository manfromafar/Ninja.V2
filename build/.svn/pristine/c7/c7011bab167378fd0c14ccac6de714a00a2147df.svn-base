HTML, BODY {
	width:			100%;
	height:			100%;	
}

BODY {
	background:		radial-gradient(circle at 20% 70%,#88c,#888);
}

#current-shares-chart {
	position:		absolute;
	width:			500px;
	height:			500px;
	right:			0px;
	top:			0px;
}

#current-shares-table {
	position:		absolute;
	width:			500px;
	height:			auto;
	right:			0px;
	top:			500px;
	bottom:			0px;
	overflow-y:		scroll;
	font-size:		smaller;
}

#historic-shares-chart {
	position:		absolute;
	width:			500px;
	height:			500px;
	left:			200px;
	top:			0px;
}

#historic-shares-table {
	position:		absolute;
	width:			500px;
	height:			auto;
	left:			200px;
	top:			500px;
	bottom:			0px;
	overflow-y:		scroll;
	font-size:		smaller;
}

#current-block-info {
	position:		absolute;
	width:			200px;
	height:			200px;
	left:			0px;
	top:			0px;
}

#timer {
	position:		absolute;
	width:			200px;
	height:			400px;
	top:			200px;
	left:			0px;
}