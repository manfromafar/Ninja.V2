HTML, BODY {
	width:					100%;
	height:					100%;
	border:					0px;
	padding:				0px;
	margin:					0px;
}

BODY {
	background:				#363f48;
	font-family:			Roboto;
	color:					white;
}


.shares-table {
	position:				absolute;
	height:					auto;
	font-size:				smaller;
	padding:				2px;
	margin:					2px;
	width:					30%;
	top:					50%;
	bottom:					0px;
}

.shares-table CAPTION {
	background:				#009688;
	padding:				5px;
}

#current-shares-chart {
	position:				absolute;
	width:					40%;
	height:					40%;
	left:					10%;
	top:					0px;
}

#current-shares-graph {
	position:				absolute;
	width:					40%;
	height:					40%;
	left:					10%;
	top:					0px;
}

#current-shares-table {
	left:					0px;
}

#historic-shares-chart {
	position:				absolute;
	width:					40%;
	height:					40%;
	top:					0px;
	right:					0px;
}

#historic-shares-table {
	right:					0px;
}

#current-block-info {
	position:				absolute;
	width:					10%;
	height:					auto;
	left:					0px;
	top:					0px;
	border:					2px solid black;
	border-radius:			8px;
	padding:				2px;
	margin:					2px;
	text-align:				center;
	background:				#ff5722;
	font-weight:			bold;
}

#timer {
	position:				absolute;
	width:					10%;
	height:					40%;
	top:					10%;
	left:					0px;
}

#awards-table {
	left:					35%;
	top:					0px;
}

#awards-table .award {
	padding-left:			24px;
	background-position:	left middle;
	background-repeat:		no-repeat;
	background-size:		24px 24px;
}

#recent-blocks-container {
	overflow-y:				scroll;
	position:				absolute;
	height:					auto;
	font-size:				smaller;
	padding:				2px;
	margin:					2px;
	width:					30%;
	top:					50%;
	left:					35%;
	bottom:					0px;
}

#recent-blocks-table {
	width:					100%;
}

#recent-blocks-container CAPTION {
	background:				#009688;
	padding:				5px;
}