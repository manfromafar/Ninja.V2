#!/usr/bin/perl -w

use strict;

use Cwd qw( realpath );
use File::Basename;
use FindBin;
use lib "$FindBin::Bin/../lib";

die("usage: $FindBin::Script Object.cpp | mysql -A --database=... \n") unless @ARGV == 1;

undef $/;

my $in = <>;

if ( $in =~ m|^/\*(.+?)\*/|sm ) {
	my $sql = $1;
	
	if ( $sql =~ m|create table (\S+)|i ) {
		$sql = "drop table if exists $1;\n" . $sql;
	}
	
	print $sql;
}
