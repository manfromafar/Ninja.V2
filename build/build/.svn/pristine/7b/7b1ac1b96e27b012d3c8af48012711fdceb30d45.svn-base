#include <time.h>
#include <sys/time.h>
#include <string.h>
#include <stdio.h>

#include "ftime.hpp"

char ftime_buf[100];

const char *ftime() {
	struct timeval tp;
	gettimeofday( &tp, NULL );

	memset( ftime_buf, '\0', sizeof(ftime_buf) );
	strftime( ftime_buf, sizeof(ftime_buf), "%Y-%m-%d %H:%M:%S", gmtime(&tp.tv_sec) );
	sprintf( &ftime_buf[ strlen(ftime_buf) ], ".%06lu", tp.tv_usec );

	return ftime_buf;
}
